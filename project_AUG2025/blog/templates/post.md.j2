{# templates/post.md.j2 #}
<!-- 제목 -->
<h2>{{ title }}</h2>

<!-- 잠금 정보 블록 -->
{% if locks.price or locks.duration or locks.date_range %}
<div>
  <strong>핵심 정보</strong>
  <ul>
    {% if locks.price %}<li>가격: {{ locks.price }}</li>{% endif %}
    {% if locks.duration %}<li>기간: {{ locks.duration }}</li>{% endif %}
    {% if locks.date_range %}<li>여행일정: {{ locks.date_range }}</li>{% endif %}
  </ul>
</div>
{% endif %}

<!-- 본문(LLM 재작성 결과) -->
<div>
  {{ body | safe }}
</div>

<!-- 원문 이미지(업로드 단계에서 API URL로 바인딩) -->
{% if images %}
<hr/>
<p><em>원문 이미지 미리보기(최대 5장)</em></p>
{% for src in images[:5] %}
  <p><img src="{{ src }}" alt="source" /></p>
{% endfor %}
{% endif %}

<!-- 출처 -->
{% if source_url %}
<hr/>
<p>출처: <a href="{{ source_url }}">{{ source_url }}</a></p>
{% endif %}
